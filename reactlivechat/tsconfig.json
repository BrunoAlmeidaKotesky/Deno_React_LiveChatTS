{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": false
  },
  "types": [
    "es6-promise",
    "webpack-env",
    "reflect-metadata",
    "jest"
  ],
  "include": [
    "src"
  ]
}
